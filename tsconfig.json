{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node", // Меняем модульную систему на Node
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./wwwroot/js",
    "rootDir": "./wwwroot/js",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "wwwroot/js/*.ts"
  ],
  "exclude": [
    "wwwroot/js/**/*.js"
  ]
}